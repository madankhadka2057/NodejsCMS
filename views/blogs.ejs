<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Website</title>
    <link rel="stylesheet" href="blog.css">
</head>
<body>
    <%-include('header.ejs')%>
    <div class="container">

      <%  if(blogs.length == 0){ %>
        <h1>No Blogs</h1>

      <%  }else{ %>
            <% blogs.forEach((blog)=>{ %>
                <div class="card">
                    <h2><%- blog.title  %></h2>
                    <img src= "<%- blog.image %>" alt="image" width="200px" height="200px">
                    <h3><%- blog.subTitle %></h3>
                    <p><%- blog.description.slice(0,100) %>...</p>
                    <a href="/single/<%-blog.id %>">Read More</a>
                </div>
        <%       }) %>
        <% } %>
    </div>
</body>
</html>
